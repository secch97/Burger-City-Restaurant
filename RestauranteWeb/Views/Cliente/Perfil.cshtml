
@{
    ViewBag.Title = "Mi perfil";
}

<!-- Start My Account  -->
<div class="my-account-box-main">
    <div class="container">
        <div class="my-account-page">
            <div class="row">
                <div class="col-lg-12">
                    <div class="title-all text-center">
                        <h1>MI PERFIL</h1>
                        <hr style="border-color:orangered;" />
                    </div>
                </div>
                <div class="col-lg-4 col-md-12">
                    <div class="account-box" style="border-style:none;">
                        <div class="service-box">
                            <div class="service-icon">
                                <a class="editar-perfil" href="#"> <i class="fas fa-user-alt"></i> </a>
                            </div>
                            <div class="service-desc">
                                <h4>Datos del perfil</h4>
                                <p>Edite los datos relacionados a su perfil</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12">
                    <div class="account-box" style="border-style:none;">
                        <div class="service-box">
                            <div class="service-icon">
                                <a class="actualizar-contraseña" href="#"><i class="fa fa-lock"></i> </a>
                            </div>
                            <div class="service-desc">
                                <h4>Seguridad</h4>
                                <p>Actualice su contraseña</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12">
                    <div class="account-box" style="border-style:none;">
                        <div class="service-box">
                            <div class="service-icon">
                                <a href="@Url.Action("Historial","Cliente")"> <i class="fas fa-clock"></i> </a>
                            </div>
                            <div class="service-desc">
                                <h4>Historial de ordenes</h4>
                                <p>Historial de ordenes realizadas</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalEditarPerfil">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content bg-gradient-navy">
            <div class="modal-header text-center">
                <h4 class="modal-title">ACTUALIZACIÓN DE DATOS</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form>
                <div class="modal-body">
                    <div class="text-center" style="font-weight:bold;">
                        DATOS DEL PERFIL
                    </div>
                    <hr style="border-color:orangered" />
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Nombres:</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                        </div>
                                        <input type="text" class="form-control" placeholder="Inserte sus nombres" id="nombresCliente" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Apellidos:</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                        </div>
                                        <input type="text" class="form-control" placeholder="Inserte sus apellidos" id="apellidosCliente" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center" style="font-weight:bold;">
                        DATOS DE CONTACTO
                    </div>
                    <hr style="border-color:white" />
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Teléfono fijo:</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                        </div>
                                        <input type="text" class="form-control" placeholder="Teléfono fijo de contacto" id="telefonoCliente" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Teléfono móvil:</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-mobile"></i></span>
                                        </div>
                                        <input type="text" class="form-control" placeholder="Teléfono móvil de contacto" id="movilCliente" data-mask required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Correo Electrónico:</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                        </div>
                                        <input type="text" class="form-control" placeholder="Correo electrónico" id="correoCliente" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Dirección de domicilio:</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-map"></i></span>
                                        </div>
                                        <input type="text" class="form-control" placeholder="Dirección de domicilio" id="direccionDomicilioCliente" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Dirección de entrega:</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-map-marked"></i></span>
                                        </div>
                                        <input type="text" class="form-control" placeholder="Dirección de entrega actual" id="direccionEntregaCliente" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="btnActualizarDatosPerfil" class="btn btn-warning" style="font-weight:bold;color:white;">
                        <i class="fas fa-pen" style="font-weight:bold;color:white;"></i>
                        Actualizar
                    </button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal" style="font-weight:bold;color:white;">Cerrar</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

<div class="modal fade" id="ModalActualizarContraseña">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content bg-gradient-navy">
            <div class="modal-header text-center">
                <h4 class="modal-title">ACTUALIZACIÓN DE CONTRASEÑA</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form>
                <div class="modal-body">
                    <div class="text-center" style="font-weight:bold;">
                        ACTUALICE SU CONTRASEÑA A CONTINUACIÓN:
                    </div>
                    <hr style="border-color:orangered" />
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Nueva contraseña:</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                        </div>
                                        <input type="password" class="form-control" placeholder="Inserte su nueva contraseña" id="nuevaContraseña" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Confirmar contraseña:</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                        </div>
                                        <input type="text" class="form-control" placeholder="Confirme su nueva contraseña" id="nuevaContraseñaConfirmacion" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="btnActualizarDatosPerfil" class="btn btn-warning" style="font-weight:bold;color:white;">
                        <i class="fas fa-pen" style="font-weight:bold;color:white;"></i>
                        Actualizar
                    </button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal" style="font-weight:bold;color:white;">Cerrar</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
