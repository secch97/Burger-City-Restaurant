
@{
    ViewBag.Title = "Verificar Cuenta";
}

@if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
{
    <br />
    <div class="row text-center">
        <div class="col-lg-12 text-center">
            <div class="alert alert-success" style="display: inline-block;">
                <img src="~/Content/imagenes/Cheque.png" alt="" style="width:125px;height:125px;">
                <br />
                <strong>¡Su cuenta ha sido verificada exitosamente! </strong>
                <br />
                Click aqui para <a href="#" data-toggle="modal" data-target="#modalLogin">Iniciar Sesion</a>
            </div>
            <br />
        </div>
    </div>
    <br />
}
else
{
    <br />
    <div class="row text-center">
        <div class="col-lg-12 text-center">
            <div class="alert alert-danger" style="display: inline-block;">
                <br />
                <strong>¡Error!</strong>
                <br />
                @ViewBag.Message
            </div>
            <br />
        </div>
    </div>
    <br />
}
