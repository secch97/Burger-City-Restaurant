    <script type="text/javascript">
        $(function () {
            $("input[name='telefono']").click(function () {
                if ($("#fijo").is(":checked")) {
                    $("#txtOtro").attr("disabled", "disabled");
                }
                else if ($("#movil").is(":checked")) {
                    $("#txtOtro").attr("disabled", "disabled");
                }
                else {
                    $("#txtOtro").removeAttr("disabled");
                    $("#txtOtro").focus();
                }
            });
        });
    </script>

